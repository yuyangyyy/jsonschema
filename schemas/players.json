{
    "$schema": "https://json-schema.org/draft-07/schema",
    "$id":"https://example.com/players.schema.json",
    "title":"players",
    "description": "create a players of clubs",
    "type":"object",
    "properties":{

        "id":{
            "type":"number"
        },

        "name":{"$ref":"#definitions/name"},
        
        "age":{
            "type":"number",
            "minimum": 0
        },

        "hobbies":{
            "type":"array",
            "item":[
                {"type":["string","null"]}
            ]
        },

        "email":{
            "type":"string",
            "format": "email"
        },

        "members_id":{
            "type":"number"
        }

    },
    
    "required": ["id","name","age","members_id"]

}